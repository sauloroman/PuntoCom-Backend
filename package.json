{
  "name": "backend",
  "version": "1.0.0",
  "description": "This is the backend for PuntoCom app, using Node and Typescript",
  "main": "index.js",
  "scripts": {
    "dev": "tsnd --project tsconfig.json --respawn src/app.ts",
    "build": "rimraf ./dist && tsc",
    "start": "npm run build && node dist/app.js",
    "prisma:migrate": "npx prisma migrate dev --name init",

    "seed:prisma:users": "ts-node-dev src/infrastructure/datasource/prisma/seeds/prisma-users.seed.ts",
    "seed:prisma:categories": "ts-node-dev src/infrastructure/datasource/prisma/seeds/prisma-category.seed.ts",
    "seed:prisma:suppliers": "ts-node-dev src/infrastructure/datasource/prisma/seeds/prisma-suppliers.seed.ts",
    "seed:prisma:products": "ts-node-dev src/infrastructure/datasource/prisma/seeds/prisma-products.seed.ts",

    "seed:mssql:users": "ts-node-dev src/infrastructure/datasource/ms-sql/seeds/mssql-users.seed.ts",
    "seed:mssql:categories": "ts-node-dev src/infrastructure/datasource/ms-sql/seeds/mssql-category.seed.ts"
  },
  "author": "Saulo Román Santillán Nava",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/express-fileupload": "^1.5.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mssql": "^9.1.9",
    "@types/node": "^24.2.1",
    "@types/nodemailer": "^6.4.17",
    "@types/puppeteer": "^5.4.7",
    "@types/streamifier": "^0.1.2",
    "@types/uuid": "^10.0.0",
    "prisma": "^6.6.0",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "bcryptjs": "^3.0.2",
    "bwip-js": "^4.7.0",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "env-var": "^7.5.0",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^12.2.0",
    "nodemailer": "^7.0.5",
    "puppeteer": "^24.16.2",
    "streamifier": "^0.1.1",
    "uuid": "^11.1.0"
  }
}
